{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-vcpkg-release",
      "displayName": "Ninja Release with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "ninja-vcpkg-debug",
      "displayName": "Ninja Debug with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "ninja-vcpkg-arm64-macos",
      "displayName": "Ninja arm64 macOS with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "msvc-vcpkg-release",
      "displayName": "MSVC Release with vcpkg",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "msvc-vcpkg-debug",
      "displayName": "MSVC Debug with vcpkg",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-vcpkg-release",
      "configurePreset": "ninja-vcpkg-release"
    },
    {
      "name": "ninja-vcpkg-debug",
      "configurePreset": "ninja-vcpkg-debug"
    },
    {
      "name": "ninja-vcpkg-arm64-macos",
      "configurePreset": "ninja-vcpkg-arm64-macos"
    },
    {
      "name": "msvc-vcpkg-release",
      "configuration": "Release",
      "configurePreset": "msvc-vcpkg-release"
    },
    {
      "name": "msvc-vcpkg-debug",
      "configuration": "Debug",
      "configurePreset": "msvc-vcpkg-debug"
    }
  ],
  "testPresets": [
    {
      "name": "test-release",
      "configurePreset": "ninja-vcpkg-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-debug",
      "configurePreset": "ninja-vcpkg-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-arm64-macos",
      "configurePreset": "ninja-vcpkg-arm64-macos",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-msvc-release",
      "configurePreset": "msvc-vcpkg-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-msvc-debug",
      "configurePreset": "msvc-vcpkg-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
